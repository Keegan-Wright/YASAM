<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:YASAM.ViewModels;assembly=YASAM.ViewModels"
             xmlns:controls="clr-namespace:YASAM.Controls"
             xmlns:sukiUi="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YASAM.Views.YourGamesView"
             x:DataType="vm:YourGamesViewModel">

    <Interaction.Behaviors>
        <RoutedEventTriggerBehavior
            RoutedEvent="{x:Static  Control.LoadedEvent}">
            <InvokeCommandAction
                Command="{Binding LoadCommand}" />
        </RoutedEventTriggerBehavior>
    </Interaction.Behaviors>

    <sukiUi:GlassCard Margin="10">
        <Grid RowDefinitions="Auto, *" RowSpacing="10">
            <StackPanel>
                <TextBlock Classes="h1">Your Games</TextBlock>

                <TextBlock Classes="caption" IsVisible="{Binding !Loading}">
                    <Run Text="{Binding OwnedGames}" />
                    <Run>Owned Games</Run>
                </TextBlock>
            </StackPanel>


            <ScrollViewer Grid.Row="1" AllowAutoHide="True">
                <sukiUi:BusyArea BusyText="Loading Your Games" IsBusy="{Binding Loading}">
                    <StackPanel>
                        <AutoCompleteBox 
                            Text="{Binding GamesFilterText}"
                            Watermark="Search..."
                            ItemsSource="{Binding GameNames}">
                            <Interaction.Behaviors>
                                <RoutedEventTriggerBehavior
                                    RoutedEvent="{x:Static  AutoCompleteBox.TextChangedEvent}">
                                    <InvokeCommandAction
                                        Command="{Binding UpdateFilteredGamesCommand}" CommandParameter="{Binding GamesFilterText}" />
                                </RoutedEventTriggerBehavior>
                            </Interaction.Behaviors>
                            
                        </AutoCompleteBox>
                        
                        <ItemsControl ItemsSource="{Binding GamesToDisplay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemSpacing="10" LineSpacing="10" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <controls:GameCard>
                                        <Interaction.Behaviors>
                                            <RoutedEventTriggerBehavior
                                                RoutedEvent="{x:Static  controls:GameCard.IdleEvent}">
                                                <InvokeCommandAction
                                                    Command="{Binding $parent[ItemsControl].((vm:YourGamesViewModel)DataContext).IdleActionClicked, Mode=OneTime}"
                                                    CommandParameter="{Binding }" />
                                            </RoutedEventTriggerBehavior>

                                            <RoutedEventTriggerBehavior
                                                RoutedEvent="{x:Static  controls:GameCard.ShowAchievementsEvent}">
                                                <InvokeCommandAction
                                                    Command="{Binding $parent[ItemsControl].((vm:YourGamesViewModel)DataContext).ShowAchievements, Mode=OneTime}"
                                                    CommandParameter="{Binding }" />
                                            </RoutedEventTriggerBehavior>
                                        </Interaction.Behaviors>
                                    </controls:GameCard>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </sukiUi:BusyArea>
            </ScrollViewer>


        </Grid>
    </sukiUi:GlassCard>


</UserControl>