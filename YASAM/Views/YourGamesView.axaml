<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:YASAM.ViewModels;assembly=YASAM.ViewModels"
             xmlns:controls="clr-namespace:YASAM.Controls"
             xmlns:sukiUi="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YASAM.Views.YourGamesView"
             x:DataType="vm:YourGamesViewModel">
    
    <Interaction.Behaviors>
        <RoutedEventTriggerBehavior
            RoutedEvent="{x:Static  Control.LoadedEvent}">
            <InvokeCommandAction
                Command="{Binding LoadCommand, Mode=OneTime}" />
        </RoutedEventTriggerBehavior>
    </Interaction.Behaviors>
    
    <sukiUi:GlassCard Margin="10">
        <Grid RowDefinitions="Auto, *" RowSpacing="10">
            <StackPanel>
                <TextBlock Classes="h1">Your Games</TextBlock>
                <TextBlock Classes="caption">
                    <Run Text="{Binding OwnedGames}"></Run>
                    <Run>Owned Games</Run>
                </TextBlock>
            </StackPanel>

        
            <ScrollViewer Grid.Row="1" AllowAutoHide="True">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding Games}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemSpacing="10" LineSpacing="10"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:GameCard></controls:GameCard>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </sukiUi:GlassCard>


</UserControl>
